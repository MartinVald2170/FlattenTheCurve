<p id="notice"><%= notice %></p>

<h1>Welcome, user: <%= current_account.email %></h1> 

<%= link_to  "Sign out", destroy_account_session_path, method: :delete %>


<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Completed</th>
      <th>User</th>
      <th colspan="3">Task Control</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <%# <% if (task.user_id == current_user.id) %>
        <tr>
          <td class="title"><%= task.title %></td>
          <td><%= task.start_time %></td>
          <td class="end-time" data-complete="no" data-title=<%= task.title %>><%= task.end_time %></td>
          <td><%= task.description %></td>
          <td><%= task.priority %></td>
          <td><%= task.completed %></td>
          <td><%= task.account_id %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr> 
      <%# <% end %>
    <% end %>
  </tbody>
</table>

<br>

